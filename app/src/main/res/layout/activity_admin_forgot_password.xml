<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.lue.waterroofingmeasurement.AdminForgotPassword"
    android:background="#e9ecec">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="110dp"
        android:orientation="horizontal"
        android:id="@+id/linearLayout1">
        <EditText
            android:id="@+id/email"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginLeft="35dp"
            android:background="@drawable/myedittext"
            android:drawableLeft="@drawable/ic_person_black_18dp"
            android:ems="10"
            android:hint="Email"
            android:textAlignment="gravity" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="25dp"
        android:id="@+id/linearLayout2"
        android:layout_below="@+id/linearLayout1">
        <EditText
            android:id="@+id/editpassword"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_marginLeft="35dp"
            android:drawableLeft="@drawable/ic_lock_black_18dp"
            android:background="@drawable/myedittext"
            android:ems="10"
            android:hint="Password"
            android:inputType="textPassword" />

    </LinearLayout>


    <Button
    android:id="@+id/btnconfirm"
    android:layout_width="250dp"
    android:layout_height="35dp"
    android:layout_gravity="center"
    android:layout_below="@+id/linearLayout2"
    android:background="#545f81"
    android:text="Confirm"
        android:layout_marginTop="40dp"
    android:layout_centerHorizontal="true"
    android:textColor="#fff"
    android:textSize="18dp"
    android:textStyle="bold" />
</RelativeLayout>
