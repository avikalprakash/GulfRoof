<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e9ecec"
    android:orientation="vertical">

    <TextView
        android:id="@+id/calcuterate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calculate Rate "
        android:textSize="24dp"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:weightSum="1">

            <EditText
                android:id="@+id/calcutedareainput"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginLeft="55dp"
                android:layout_weight="1.37"
                android:background="@drawable/myedittext"
                android:ems="10"
                android:hint="Calculate Area"
                android:paddingLeft="7dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">


            <EditText
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginLeft="55dp"
                android:paddingLeft="7dp"
                android:background="@drawable/myedittext"
                android:ems="10"
                android:hint="Rate/price" />
        </LinearLayout>

        <Button
            android:id="@+id/calculatebutton"
            android:layout_width="241dp"
            android:layout_height="35dp"
            android:layout_marginLeft="50dp"

            android:layout_marginTop="30dp"
            android:background="#545f81"
            android:text=" Calculate"
            android:textColor="#fff"
            android:textSize="15dp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total"
                android:textSize="18dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/usdcalculate"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginLeft="98dp"
                android:paddingLeft="7dp"
                android:background="@drawable/myedittext"
                android:ems="10"
                android:hint="0.00 USD"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/milestone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Milestone"
                android:textSize="18dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/milestone1"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginLeft="60dp"
                android:background="@drawable/myedittext"
                android:ems="10"
                android:hint="Milestone 1 in %"
                android:paddingLeft="7dp" />
        </LinearLayout>
        <EditText
            android:id="@+id/milestone2"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_marginTop="20dp"
            android:paddingLeft="7dp"
            android:layout_marginLeft="140dp"
            android:background="@drawable/myedittext"
            android:ems="10"
            android:hint="Milestone 2 in %"/>
        <EditText
            android:id="@+id/milestone3"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:paddingLeft="7dp"
            android:layout_marginLeft="140dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/myedittext"
            android:ems="10"
            android:hint="Milestone 3 in %"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/canclecalculation"
            android:layout_width="120dp"
            android:layout_height="35dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="40dp"
            android:background="#545f81"
            android:text="Cancel"
            android:textColor="#fff"
            android:textSize="15dp"
            android:textStyle="bold" />


        <Button
            android:id="@+id/generatequote"
            android:layout_width="150dp"
            android:layout_height="35dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="40dp"
            android:background="#545f81"
            android:text="Generate Quote"
            android:textColor="#fff"
            android:textSize="15dp"
            android:textStyle="bold" />
    </LinearLayout>

    </LinearLayout>
