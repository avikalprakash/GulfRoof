        <TextView
            android:id="@+id/addnewcustomer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Customer Details "
            android:textSize="24dp"

            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/linearLayout">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                >


                <EditText
                    android:id="@+id/newprojectname"
                    android:layout_width="250dp"
                    android:layout_height="25dp"
                    android:background="@drawable/myedittext"
                    android:ems="10"
                    android:maxLength="30"
                    android:inputType="textPersonName"
                    android:hint="Project Name"
                    android:paddingLeft="10dp"
                    android:layout_weight="1.48" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                >


                <EditText
                    android:id="@+id/newcustomername"
                    android:layout_width="250dp"
                    android:layout_height="25dp"
                    android:background="@drawable/myedittext"
                    android:ems="10"
                    android:maxLength="30"
                    android:inputType="textPersonName"
                    android:hint="Customer Name"
                    android:paddingLeft="10dp"
                    android:layout_weight="1.48" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:layout_gravity="center">


                <EditText
                    android:id="@+id/newmobileno"
                    android:layout_width="250dp"
                    android:layout_height="25dp"
                    android:background="@drawable/myedittext"
                    android:ems="10"
                    android:maxLength="10"
                    android:inputType="number"
                    android:hint="Mobile Number"
                    android:paddingLeft="10dp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:layout_gravity="center">


                <EditText
                    android:id="@+id/customeremail"
                    android:layout_width="250dp"
                    android:layout_height="25dp"
                    android:background="@drawable/myedittext"
                    android:ems="10"
                    android:maxLength="30"
                    android:inputType="textEmailAddress"
                    android:hint="Email"
                    android:paddingLeft="10dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:layout_gravity="center">

                <EditText
                    android:id="@+id/customerfax"
                    android:layout_width="250dp"
                    android:layout_height="25dp"
                    android:background="@drawable/myedittext"
                    android:ems="10"
                    android:maxLength="10"
                    android:inputType="number"
                    android:hint="Fax"
                    android:paddingLeft="10dp" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:layout_gravity="center">


                <EditText
                    android:id="@+id/customerlandline"
                    android:layout_width="250dp"
                    android:layout_height="25dp"
                    android:background="@drawable/myedittext"
                    android:ems="10"
                    android:maxLength="10"
                    android:inputType="number"
                    android:hint="Landline No"
                    android:paddingLeft="10dp" />
            </LinearLayout>

