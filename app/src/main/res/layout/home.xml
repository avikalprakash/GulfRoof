<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e9ecec">
    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Home "
        android:textSize="24dp"
        android:id="@+id/text"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:layout_marginTop="40dp" />

    <RelativeLayout
        android:layout_width="250dp"
        android:layout_height="match_parent"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/text"
        android:id="@+id/linearLayout"
        android:layout_centerHorizontal="true">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="List of Customer"
                android:layout_gravity="center"
                android:textColor="#000000"
                android:textSize="25sp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/myedittext"
                android:id="@+id/customerListLayout"
                android:drawableLeft="@drawable/ic_contacts_black_18dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Specification"
                android:textSize="25sp"
                android:layout_below="@+id/layoutMakeOffer"
                android:layout_gravity="center"
                android:textColor="#000000"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/myedittext"
                android:layout_marginTop="40dp"
                android:id="@+id/layoutSpecification"
                android:drawableLeft="@drawable/ic_group_black_18dp"/>
          <!--  <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Others"
                android:textColor="#000000"
                android:layout_marginTop="40sp"
                android:layout_gravity="center"
                android:drawableTop="@drawable/ic_group_black_18dp"/>-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Make an offer"
                android:textColor="#000000"
                android:textSize="25sp"
                android:layout_centerHorizontal="true"
                android:paddingLeft="25dp"
                android:paddingRight="25dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:background="@drawable/myedittext"
                android:layout_marginTop="40dp"
                android:layout_below="@+id/customerListLayout"
                android:id="@+id/layoutMakeOffer"
                android:layout_gravity="center"
                android:drawableLeft="@drawable/ic_person_add_black_18dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Setting"
                android:id="@+id/txtsetting"
                android:textColor="#000000"
                android:textSize="25sp"
                android:paddingLeft="65dp"
                android:paddingRight="65dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/myedittext"
                android:layout_marginTop="40dp"
                android:layout_below="@+id/layoutSpecification"
                android:layout_gravity="center"
                android:drawableLeft="@drawable/ic_settings_black_18dp"/>
        </RelativeLayout>


</RelativeLayout>